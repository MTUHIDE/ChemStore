@page
@model ChemStoreWebApp.Pages.Admin.Location.CreateModel

@{
    ViewData["Title"] = "Create Location";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h2>Create Location</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Location.RoomNumber" class="control-label"></label>
                <input asp-for="Location.RoomNumber" class="form-control" style="width:150px; border-radius:5px; height:25px;" />
                <span asp-validation-for="Location.RoomNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Location.BuildingName" class="control-label"></label>
                <br />
                <select asp-for="Location.BuildingName" asp-items="Html.GetEnumSelectList<Buildings>()" id="selectBuilding" class="rounded-dropdown inputPlaceholder" style="width:150px; border-radius:5px; height:25px;">
                    <option value="" selected disabled>Building</option>    
                </select>
                <span asp-validation-for="Location.BuildingName" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn table-button" style="background-color:gold;">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
