@page
@model ChemStoreWebApp.Pages.Admin.Chemicals.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Chemical</h4>
<hr />
<div class="row">
    <form method="post" style="width:100%;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Chemical.CasNumber" class="control-label"></label>
                <input asp-for="Chemical.CasNumber" class="form-control" />
                <span asp-validation-for="Chemical.CasNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chemical.ChemicalName" class="control-label"></label>
                <input asp-for="Chemical.ChemicalName" class="form-control" />
                <span asp-validation-for="Chemical.ChemicalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chemical.Manufacturer" class="control-label"></label>
                <input asp-for="Chemical.Manufacturer" class="form-control" />
                <span asp-validation-for="Chemical.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chemical.CatalogNumber" class="control-label"></label>
                <input asp-for="Chemical.CatalogNumber" class="form-control" />
                <span asp-validation-for="Chemical.CatalogNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-inline">
            <div class="form-group-vertical">
                <label asp-for="Corrosion" class="control-label"><span class="hazard-edit hazard-corrosion"></span></label>
                <input asp-for="Corrosion" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="Environment" class="control-label"><span class="hazard-edit hazard-environment"></span></label>
                <input asp-for="Environment" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="ExclamationMark" class="control-label"><span class="hazard-edit hazard-exclamation"></span></label>
                <input asp-for="ExclamationMark" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="ExplodingBomb" class="control-label"><span class="hazard-edit hazard-bomb"></span></label>
                <input asp-for="ExplodingBomb" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="FlameOverCircle" class="control-label"><span class="hazard-edit hazard-flame-circle"></span></label>
                <input asp-for="FlameOverCircle" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="Flame" class="control-label"><span class="hazard-edit hazard-flame"></span></label>
                <input asp-for="Flame" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="GasCylinder" class="control-label"><span class="hazard-edit hazard-gas"></span></label>
                <input asp-for="GasCylinder" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="HealthHazard" class="control-label"><span class="hazard-edit hazard-health"></span></label>
                <input asp-for="HealthHazard" class="hazard-check form-control" />
            </div>
            <div class="form-group-vertical">
                <label asp-for="Skull" class="control-label"><span class="hazard-edit hazard-skull"></span></label>
                <input asp-for="Skull" class="hazard-check form-control" />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
